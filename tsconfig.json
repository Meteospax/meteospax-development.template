{
  "compilerOptions": {
    //"module": "ES6",
    "module": "commonjs",
    "declaration": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "outDir": "out",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": false
  },
  "exclude": ["node_modules", "out", "git", "venv"],
  "include": ["*.ts", "**/*.ts"]
}
